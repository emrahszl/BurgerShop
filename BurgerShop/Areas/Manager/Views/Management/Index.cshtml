                <button type="button" class="btn btn-primary float-right"><i class="fas fa-plus"></i> Add item</button>
            </div>
        </div>
        <!-- /.card -->
    </section>
</div>
<!-- /.row (main row) -->

<div class="row justify-content-center">
    <div class="card w-75">
        <div class="card-header text-center">
            <h3 class="card-title">
                <i class="fas fa-table"></i>
                Customers & Orders Table
            </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-dark table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Menu Infos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr class="">
                            <td class="text-center">@user.FirstName</td>
                            <td class="text-center">@user.LastName</td>
                            <td>
                                @foreach (var order in user.Orders)
                                {
                                    if (user.Orders[0] != order)
                                    {
                                        <hr class="border border-5">
                                    }
                                    <ul class="list-unstyled">
                                        <li><strong>Menus</strong></li>

                                        @foreach (var menu in order.Menus)
                                        {
                                            <li>@menu.MenuNamePrice</li>
                                        }
                                    </ul>

                                    <ul class="list-unstyled">
                                        <li><strong>Extra Materials</strong></li>

                                        @foreach (var em in order.ExtraMaterials)
                                        {
                                            <li>@em.ExtraNamePrice</li>
                                        }
                                    </ul>

                                    <ul class="list-unstyled">
                                        <li><strong>Order Count = @order.OrderCount</strong></li>
                                    </ul>

                                    <ul class="list-unstyled">
                                        <li><strong>Order Amount = @(((order.Menus.Sum(m => m.MenuPrice) + order.ExtraMaterials.Sum(em => em.MaterialPrice)) + (order.OrderSize == OrderSize.Small ? 0m : order.OrderSize == OrderSize.Medium ? 25m : 50m)) * order.OrderCount) TL</strong></li>
                                    </ul>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": true,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
                "responsive": true,
            });
        });
    </script>
}