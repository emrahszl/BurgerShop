@model List<ExtraMaterial>
@{
    ViewBag.Title = "ExtraMaterials";
}

<div class="card">
    <div class="card-body">
        <a class="btn btn-primary mb-3" asp-area="Manager" asp-controller="ExtraMaterials" asp-action="CreateMaterial">Create ExtraMaterial</a>

        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>Menu Name</th>
                    <th>Menu Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var extraMaterial in Model)
                {
                    <tr>
                        <td>@extraMaterial.MaterialName</td>
                        <td>@extraMaterial.MaterialPrice</td>
                        <td>
                            <a asp-area="Manager" asp-controller="ExtraMaterials" asp-action="DeleteMaterial" asp-route-id="@extraMaterial.Id" class="btn btn-danger">Delete</a>
                            <a asp-area="Manager" asp-controller="ExtraMaterials" asp-action="EditMaterial" asp-route-id="@extraMaterial.Id" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
