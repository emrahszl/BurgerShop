@model List<Order>
@{
    ViewBag.Title = "My Orders";

}

<section id="hero" class="d-flex flex-column align-items-center mt-5 pt-5">
    <div class="container position-relative m-5 w-75">
        <h1 class="mb-3">My Orders</h1>
        <a class="btn btn-primary mb-3" asp-action="CreateOrder">Create Order</a>
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Order Size</th>
                    <th>Order Count</th>
                    <th>Menu Name</th>
                    <th>Menu Price</th>
                    <th>Material Name</th>
                    <th>Material Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderSize</td>
                        <td>@order.OrderCount</td>
                        <td>@order.Menus.Select(m => m.MenuName)</td>
                        <td>@order.Menus.Select(m => m.MenuPrice)</td>
                        <td>@order.ExtraMaterials.Select(em => em.MaterialName)</td>
                        <td>@order.ExtraMaterials.Select(em => em.MaterialPrice)</td>
                        <td>
                            <a asp-action="DeleteOrder" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>